<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:boba_drink, "Favorite boba drink") %>
  <%= text_field_tag(:boba_drink, nil, placeholder: @placeholder_drink) %>

  <%= label_tag(:superhero_power, "Superhero power") %>
  <%= text_field_tag(:superhero_power) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>